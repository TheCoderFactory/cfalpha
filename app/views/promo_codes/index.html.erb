<div class="row">
  <div class="col s12 m12">
    <div class="card z-depth-3 hoverable">
      <div class="card-content grey-text text-darken-2">
        <span class="card-title grey-text text-darken-2">Promo Codes</span>
          <p id="notice"><%= notice %></p>

<%= link_to 'Add Promo code', new_promo_code_path, class: 'btn light-blue small' %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th class="right-align">Price</th>
      <th class="right-align">Percent</th>
      <th>Code</th>
      <th>Course intake</th>
      <th class="right-align">Discount Value</th>
      <th>Date used</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @promo_codes.each do |promo_code| %>
      <tr>
        <td><%= promo_code.name %></td>
        <td class="right-align"><%= number_to_currency(promo_code.price_value) %></td>
        <td class="right-align"><%= number_to_percentage(promo_code.percent_value, precision: 0)  %></td>
        <td><%= link_to promo_code.code, promo_code %></td>
        <td><%= promo_code.course_intake.course.name if promo_code.course_intake %></td>
        <td class="right-align"><%= number_to_currency(promo_code.discount) %></td>
        <td><%= promo_code.date_used %></td>
        <td><%= link_to 'Edit', edit_promo_code_path(promo_code) %></td>
        <td><%= link_to 'Delete', promo_code, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div></div></div></div>

