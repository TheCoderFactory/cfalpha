<p id="notice"><%= notice %></p>

<h1>Listing Promo Codes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price value</th>
      <th>Percent value</th>
      <th>Expiry date</th>
      <th>User</th>
      <th>Code</th>
      <th>Course intake</th>
      <th>Creator</th>
      <th>Date used</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @promo_codes.each do |promo_code| %>
      <tr>
        <td><%= promo_code.name %></td>
        <td><%= promo_code.description %></td>
        <td><%= promo_code.price_value %></td>
        <td><%= promo_code.percent_value %></td>
        <td><%= promo_code.expiry_date %></td>
        <td><%= promo_code.user %></td>
        <td><%= promo_code.code %></td>
        <td><%= promo_code.course_intake %></td>
        <td><%= promo_code.creator_id %></td>
        <td><%= promo_code.date_used %></td>
        <td><%= link_to 'Show', promo_code %></td>
        <td><%= link_to 'Edit', edit_promo_code_path(promo_code) %></td>
        <td><%= link_to 'Destroy', promo_code, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

