<%= simple_form_for(@promo_code) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :price_value %>
    <%= f.input :percent_value %>
    <%= f.input :expiry_date %>
    <%= f.association :user %>
    <%= f.input :code %>
    <%= f.association :course_intake %>
    <%= f.input :creator_id %>
    <%= f.input :date_used %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
