<%= simple_form_for(@promo_code) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :code %>
    <%= f.input :description %>
    <%= f.input :price_value %>
    <%= f.input :percent_value %>
    <%= f.input :expiry_date %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
