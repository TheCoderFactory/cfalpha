<p id="notice"><%= notice %></p>
  <div class="row">
    <div class="col s12 m12">
      <div class="card z-depth-3 hoverable">
        <div class="card-content grey-text text-darken-2">
          <span class="card-title grey-text text-darken-2"><%= @enquiry.enquiry_type.name if @enquiry.enquiry_type %></span>


<p><span class="bold">Name:</span><br>
  <%= @enquiry.first_name %>
  <%= @enquiry.last_name %>
</p>

<p><span class="bold">Company:</span>
  <%= @enquiry.company %>
</p>

<p><span class="bold">Phone:</span>
  <%= @enquiry.phone %>
</p>

<p><span class="bold">Email:</span>
  <%= @enquiry.email %>
</p>

<p><span class="bold">Message:</span><br>
  <%= @enquiry.message %>
</p>
<br>
<p><span class="bold">Responded to:</span>
  <% if @enquiry.responded_to %>
    YES
  <% else %>
    <%= link_to 'Responded', responded_to_enquiry_path(@enquiry), class: 'btn light-blue' %>
  <% end %>

</p>

</div></div></div></div>

<%= link_to 'Back', enquiries_path %>
