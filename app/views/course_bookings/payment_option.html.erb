<section class="light-blue lighten-4" id="top-section">
<div class="container">
	<div class="row">
	  <div class="col s12 m12">
	  	<h2>Hi <%= current_user.first_name %></h2>
	  	<p class="flow-text">Choose to pay a deposit or pay in full.</p>
	  	<div class="row">
	  		<div class="col m4 s12">
	    		<div class="card">
	      		<div class="card-content grey-text text-darken-2 center-align">
	      
	        <span class="card-title grey-text text-darken-2 bold">
	        	Step 1.<br>Confirm booking<br><hr>
	        </span>

	        <span class="card-title grey-text text-darken-2">
	        <i class="fa fa-<%= @course.icon %>"></i> <%= @course_intake.course.name %></span>
			        <% if @course_intake %>
			        	<p><%= @course_intake.course_location.name %>, <%= @course_intake.course_location.city %></p>
			        	<p>Starts <%= @course_intake.start_date.strftime('%d %B %Y') %></p>
			        	<p> 
			        		<% if @course_intake.price > 0.0 %>
			        			<%= number_to_currency(@course_intake.price) %> <%= '+ GST' %><br><%= '(TOTAL: ' + number_to_currency(@course_intake.price * 1.1).to_s + ')' %>
			        		<% else %>
			        			FREE
			        		<% end %>
			        	</p>
			        <% end %>
			       	<br>
			       	<% if @course_intake.price > 0.0 %>
	        			<a href="#" class="btn-large disabled">CONFIRMED</a>
	        		<% else %>
	        			<%= render 'free_form' %>
	        		<% end %>
	        	</div>
	        </div>
	      </div>
	      <div class="col m4 s12">
			    <div class="card z-depth-5">
			      <div class="card-content grey-text text-darken-2 center-align">
			        <span class="card-title light-blue-text bold">
			        	Step 2.<br>Choose payment option<br><hr>
			        </span>
			        <p>Upfront payment </p>
			        <%= link_to 'Pay in full', payments_path(booking: @course_booking.guid, payment_option: 'full'), class: 'waves-effect waves-light btn light-blue btn-large' %>
			        <br><br>
			        <p>Payment plan</p>
			        <%= link_to 'Pay $500 deposit', payments_path(booking: @course_booking.guid, payment_option: 'deposit'), class: 'waves-effect waves-light btn light-blue btn-large' %>
	        	</div>
	        </div>
	      </div>
	      <div class="col m4 s12">
			    <div class="card">
			      <div class="card-content grey-text text-darken-2 center-align">
			        <span class="card-title grey-text text-darken-2">
			        	Step 3.<br>Make payment<br><hr>
	        		</span>
	        	</div>
	        </div>
	      </div>
	    </div>
	  </div>
	</div>
</div>
</section>