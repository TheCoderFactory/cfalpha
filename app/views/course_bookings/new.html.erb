
<div class="container">
	<div class="row">
	  <div class="col s12 m12">
	  	<h2>Hi <%= current_user.first_name %></h2>
	  	<p class="flow-text">Step 1 of 2. Confirm your booking.<br>Check that you have selected the correct course and date.</p>
	  	<div class="row">
	  		<div class="col m5 s12">
	    <div class="card z-depth-3 hoverable">
	      <div class="card-content grey-text text-darken-2">
	        <span class="card-title grey-text text-darken-2">Course: <%= @course_intake.course.name %></span>
			        <% if params[:intake_id] %>
			        	<p>Location: <span class="right"><%= @course_intake.course_location.name %>, <%= @course_intake.course_location.city %></span></p>
			        	<p>Start date: <span class="right"><%= @course_intake.start_date.strftime('%d %B %Y') %></span></p>
			        	<p>Price: 
			        		<% if @course_intake.price > 0.0 %>
			        			<span class="right"><%= number_to_currency(@course_intake.price) %> <%= '+ GST' %> <%= '(TOTAL: ' + number_to_currency(@course_intake.price * 1.1).to_s + ')' %>
			        		<% else %>
			        			<span class="right">FREE
			        		<% end %>
			        	</span></p>
			        <% end %>
			       <br>
	        		<%= render 'form' %>
	        	</div>
	        </div>
	      </div>
	    </div>
	  </div>
	</div>
</div>
