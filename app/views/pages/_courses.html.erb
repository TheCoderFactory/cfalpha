<div class="container">
  <div class="row">
    <h2>Coder Factory Workshops</h2>
    <% @workshops.each do |course| %>
       
        <div class="col s6">
          <div class="card grey-text text-darken-2 hoverable z-depth-3">
            
            <div class="card-content" style="height: 180px;">
              <span class="card-title grey-text text-darken-2"><i class="fa fa-<%= course.icon %>"></i> <%= course.name %> 
              </span><br>
              <span class="card-title grey-text text-darken-2"><small class="light-blue-text" style="text-transform: uppercase;"><%= course.course_type.name if course.course_type %></small></span>
              <p><%= course.tagline %></p>
            </div>
            <div class="card-action">
              <%= link_to "See more details", course_path(course) %>
            </div>
          </div>
        </div>
      
    <% end %>
