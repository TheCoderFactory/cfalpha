<%= content_for :title, 'Join the Coder Factory Community' %>
<%= content_for :description, 'Check out the great community events and supportive partners. Join our thriving community of creators, makers and coders.' %>

<section class="light-blue community valign-wrapper z-depth-2" id="top-section">
	<div class="container">
	<center>
        <div class="align-center hide-on-small-only" id="customheader">
          We Love Community
        </div>   
        <div class="align-center hide-on-med-and-up">
          <h1 style="color:white;">We Love Community</h1>
        </div>  
    <div class="down-arrow">
    	<br><br><i class="material-icons medium white-text">keyboard_arrow_down</i>
    </div>
  </center>
</div>
</section>

<br>
<section>
	<div class="card">
	  <div class="card-content">
	    <div class="container">
				<%= render 'volunteer' %>
			</div>
	  </div>
	</div>
</section>

<section>
	<div class="card">
	  <div class="card-content">
	    <div class="container">
				<%= render 'coder_club' %>
			</div>
	  </div>
	</div>
</section>
<br>

<% unless user_signed_in? %>
<section class="grey lighten-2">
<div class="container">
<%= render 'layouts/club' %>
</div>
</section>
<% end %>