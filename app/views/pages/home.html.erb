<style>
#customElement {background-image: url(<%= asset_path 'car.jpg' %>);}
</style>
<% @video_code = 'kUu-o7mnBDk' %>
<%= render 'layouts/top_bar' %>
<% @header_title = "CREATE the FUTURE" %>
<% @header_tagline = false %>

<!-- TECH HEROES -->
<section id="tech-heroes">
  <div class="container">
    <h1 class="center-align white-text">Become a tech hero!</h1>
  </div>
</section>

<!-- TESTIMONIALS -->
<section id="testimonials" class="white">
<div class="container">
<h2>What our students say...</h2>
<div class="row"><div class="col s12">
  <div class="slider hoverable z-depth-3">
    <ul class="slides">
      <li>
        <img src="<%= asset_path 'julia.jpg' %>">
        <div class="caption right-align">
          
          <h3>&nbsp;</h3>
          <p class="light grey-text text-lighten-3 flow-text">Learning to code changed my life.<br>I live half the year<br> in Bali as a digital nomad.</p>
          <p>- Julia Clavien, Web Designer</p>
        </div>
      </li>
      <li>
        <img src="<%= asset_path 'heloise.jpg' %>">
        <div class="caption left-align">
          <p class="light grey-text text-lighten-3 flow-text">If you want to work in tech,<br> you need to know code. <br>Coder Factory taught me how.</p>
          <p>- Héloïse Lakermance</p>
        </div>
      </li>
    </ul>
  </div>
  </div></div></div>
</section>

<!-- INSIDE CODER FACTORY -->
<section id="inside-cf" class="grey darken-4">
  <div class="container">
    <h2 class="white-text">Inside Coder Factory</h2>
    <div class="row">
      <div class="col s12 m6" id="inside-coder-factory">
        <a href="https://www.youtube.com/watch?v=d_09xRdOMlU" target="_blank">
          <img src="<%= asset_path 'vid.jpg' %>" class="responsive-img ">
          <p class="flow-text center-align"><i class="fa fa-play-circle"></i> Hear from our students.</p>
        </a>
      </div>
      
      <div class="col s12 m6">
        <a href="https://www.youtube.com/watch?v=OW1djJd9Fu0" target="_blank">
          <img src="<%= asset_path 'learn-to-code.jpg' %>" class="responsive-img">
          <p class="flow-text center-align"><i class="fa fa-play-circle"></i> Why you should learn to code.</p>
        </a>
      </div>
      
  </div>
</section>

<!-- PARTNERS -->
<section class="white hide-on-small-only">
<%= render 'layouts/partners' %>
</section>
<br>
<hr>

