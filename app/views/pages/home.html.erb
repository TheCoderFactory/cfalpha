  <div class="container">
    <ul class="collection with-header z-depth-3">
        <li class="collection-header"><h3>Upcoming Courses</h3></li>
    </ul>
    <ul class="collection with-header  hoverable z-depth-2">
      <%= render partial: 'course_intakes/upcoming_course_intake', collection: @upcoming_course_intakes, as: :intake %>
    </ul>
  </div>
</section>

<!-- COURSES -->
<section class="grey lighten-2">
<%= render 'courses' %>
</section>

<!-- COMMUNITY -->
<section class="grey lighten-2">
