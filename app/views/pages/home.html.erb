        <ul class="collapsible hoverable popout" data-collapsible="accordion">
          <%= render @part_time_courses %>
          </ul>
      </div>
    </div>
  </div>
</section>
<section class="">
  <div class="container">
    <h2>Business Courses</h2>
    <div class="row">
      <div class="col m12">
        <ul class="collapsible hoverable popout" data-collapsible="accordion">
          <%= render @business_courses %>
          </ul>
      </div>
    </div>
    <h2>School Courses</h2>
    <div class="row">
      <div class="col m12">
        <ul class="collapsible hoverable popout" data-collapsible="accordion">
          <%= render @school_courses %>
          </ul>
      </div>
    </div>
  </div>
</section>
<section class="">
  <div class="container">
    <h2>Fast Track Intensive</h2>
    <div class="row">
      <div class="col m12">
        
