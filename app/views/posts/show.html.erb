<section class="light-blue" id="top-section">
  <div class="container">
  
    <div class="row">
      <div class="col s12 m9">
        <div class="card">
          <div class="card-image">
            <a href="/posts/<%= @post.slug %>">
              <%= image_tag(@post.image) %>
            </a>
          </div>
          <div class="card-content blog-post">
              <a href="/posts/<%= @post.slug %>"><h1><span class="card-title grey-text text-darken-2"><%= @post.title %></span></h1></a>
            <div class="chip">
              <img src="<%= asset_path 'pete.jpg' %>" alt="<%= @post.user.name %>">
              <%= @post.user.name %>
            </div>
            <div class="chip">
              <%= @post.published_date.strftime('%d %B %Y') %>
            </div>
              <hr>
            <p class="flow-text"><%= @post.lead %></p>

            <div class="flow-text">
              <%= @post.content.html_safe %>
            </div>
          </div>
          
        </div>
      </div>
      <div class="col s12 m3">

      </div>
    </div>
  </div>
</section>