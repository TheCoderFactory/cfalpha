<% @total_price = @booking.price + @booking.gst %>


<div class="container">
	<div class="row">
	  <div class="col s12 m12">
	  	<h2>Thanks <%= current_user.first_name %></h2>
	  	<p class="flow-text">Step 2 of 2. Finalise your booking.<br>Pay by credit card below.</p>
	    	<div class="row">
	       	<div class="col m5">
	       		<div class="card z-depth-3 hoverable">
	      			<div class="card-content grey-text text-darken-2">
	        			<span class="card-title grey-text text-darken-2">Course: <%= @course_intake.course.name %></span>
			        
			        	<p>Location: <span class="right"><%= @booking.course_intake.course_location.name %>, <%= @booking.course_intake.course_location.city %></span></p>
			        	<p>Start date: <span class="right"><%= @booking.course_intake.start_date.strftime('%d %B %Y') %></span></p>
			        	<p>Course price: <span class="right"><%= number_to_currency(@course_intake.price) %></span></p>
				        		<% if @booking.discount %>
				        			<p>Discount: <span class="right"><%= number_to_currency(@booking.discount) %></span></p>
				        		<% end %>
				        		<p>GST: <span class="right"><%= number_to_currency(@booking.gst) %></span></p>
				        		<p>Amount due:<span class="right"><%= number_to_currency(@booking.price + @booking.gst) %></span></p>
			        		
	        	</div>
	        </div>
	       </div>
        	<div class="col m7">
        		<div class="card z-depth-3 hoverable">
        			<div class="card-content grey-text text-darken-2">
        				<span class="card-title grey-text text-darken-2"><i class="fa fa-lock"></i> Pay by credit card 
        				</span>
        				<% render 'stripe_form' %>
        				<%= render 'payment_form' %>
        				
        			</div>
        		</div>
        	</div>
	      </div>
	    </div>
	  </div>
	</div>
</div>

