<section class="light-blue" id="top-section">
<div class="container">
  <div class="row">
  <div class="col m6">
    	<h2>Register</h2>
    	<div class="card z-depth-3 hoverable">
    	  <div class="card-content grey-text text-darken-2">
    	    <span class="card-title grey-text text-darken-2">Become a Coder Factory Club member.</span>
    	    
    	    <p>Discounts on courses, exclusive events, tutorials and much more.</p>
    	    <p class="notice"><%= notice %></p>
    	    <p class="alert"><%= alert %></p>
    	    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    	      <%= f.error_notification %>
    	      <div class="row">
    	        <div class="input-field col s6">
    	            <%= f.input :first_name, required: true, autofocus: true %>
    	        </div>
    	        <div class="input-field col s6">
    	            <%= f.input :last_name, required: true %>
    	        </div>
    	      </div>
    	      <div class="input-field">
    	        <%= f.input :email, required: true %>
    	      </div>
    	      <div class="input-field">
    	        <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    	      </div>
    	      <div class="form-actions">
    	        <%= f.button :submit, "Join the club" %>
    	      </div>
    	    <% end %>

    </div>
	</div>
</div>
    <div class="col m6">
    	<h2>Already a member?</h2>
      <div class="card z-depth-3 hoverable">
        <div class="card-content grey-text text-darken-2">
          <span class="card-title grey-text text-darken-2">Sign in to book your course.</span>

					<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
						<p class="notice"><%= notice %></p>
          	<p class="alert"><%= alert %></p>
					  <div class="form-inputs">
					    <%= f.input :email, required: false %>
					    <%= f.input :password, required: false %>
					  </div>

					  <div class="form-actions">
					    <%= f.button :submit, "Log in" %>
					  </div>
					<% end %>
					<%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
				</div>
			</div>
		</div>
	</div>
</div>

</section>

