<div class="card grey-text text-darken-2 hoverable z-depth-3">
<div class="card-content">
<span class="card-title"><h3>Join the Coder Factory Club</h3></span>
<p class="flow-text light-blue-text">Coding is not just for geeks anymore. Anyone can do it - and it's fun!</p><hr>
<div class="row">
	<!-- <div class="col m2">
	IMAGE
	</div> -->
	<div class="col m6">
		<br>
		<ul class="fa-ul">
			<li><i class="fa-li fa fa-check-square"></i> Free workshops</li>
			<li><i class="fa-li fa fa-check-square"></i> 10% discount off your first workshop or part time course</li>
			<li><i class="fa-li fa fa-check-square"></i> Exclusive events</li>
			<li><i class="fa-li fa fa-check-square"></i> Tutorials & Resources</li>
			<li><i class="fa-li fa fa-check-square"></i> Connect to Coder Factory students for support and encouragement</li>
		</ul>
	</div>
	<div class="col m6">
	<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
	  <%= f.error_notification %>
	  <div class="white-form">
	    <div class="row">
	      <div class="input-field col s6">
	          <%= f.input :first_name, required: true %>
	      </div>
	      <div class="input-field col s6">
	          <%= f.input :last_name, required: true %>
	      </div>
	     </div>
	     <div class="row">
	    <div class="input-field col s6">
	      <%= f.input :email, required: true %>
	    </div>
	    <div class="input-field col s6">
	      <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
	    </div>
	    <div class="form-actions col s2">
	      <%= f.button :submit, "Join the club" %>
	    </div>
	  </div>
	<% end %>
	</div>
</div></div>