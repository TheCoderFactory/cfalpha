<div class="card">
  <div class="card-content">
    <span class="card-title grey-text text-darken-2">Next course</span>
    <p><%= link_to @intake.course.name, new_course_booking_path(intake_id: @intake.id) %></p>
      <p>
        <%= @intake.days_of_week %><br> Starts <%= @intake.start_date.strftime('%d %b %Y') %>
        
        <br>
       <%= @intake.course_location.name %>, <%= @intake.course_location.city %><br>
       Price: 
       <%  if @intake.price > 0.0 %>
        <%= number_to_currency(@intake.price) %> + GST
       <% else %>
        FREE
       <% end %>
       <br>
       <span class="">
        <a class="light-blue waves-effect waves-light btn" href="/course_bookings/confirm?intake_id=<%= @intake.id %>"><i class="material-icons right">send</i>Book your place</a>
       </span>
    </p>
  </div>
</div>