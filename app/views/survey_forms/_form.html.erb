<%= simple_form_for(@survey_form) do |f| %>
  <%= f.error_notification %>
  
 <div class="row">

  <% if user_signed_in? %>
  <%= f.input :user_id, as: :hidden, input_html: { value: current_user.id } %>  
    <div class="col m6">
      <%= f.input :name, readonly: true, input_html: { value: current_user.name } %>
    </div>
    <div class="col m6">
      <%= f.input :email, readonly: true, input_html: { value: current_user.email } %>
    </div>
  <% else %>
    <div class="col m6">
      <%= f.input :name %>
    </div>
    <div class="col m6">
      <%= f.input :email %>
    </div>
  <% end %>
  </div>
  <%= f.invisible_captcha :phone %>
  <div class="row">
    <div class="col m12 input-field">
    
    <%= f.input_field :industry, collection: [
      'Accommodations', 
'Accounting', 
'Advertising', 
'Aerospace', 
'Agriculture & Agribusiness', 
'Air Transportation', 
'Apparel & Accessories', 
'Auto', 
'Banking', 
'Beauty & Cosmetics', 
'Biotechnology', 
'Chemical', 
'Communications', 
'Computer', 
'Construction', 
'Consulting', 
'Consumer Products', 
'Education', 
'Electronics', 
'Employment', 
'Energy', 
'Entertainment & Recreation', 
'Fashion', 
'Financial Services', 
'Food & Beverage', 
'Health', 
'Information', 
'Journalism & News', 
'Legal Services', 
'Manufacturing', 
'Media & Broadcasting', 
'Motion Pictures & Video', 
'Music', 
'Pharmaceutical', 
'Publishing', 
'Real Estate', 
'Retail', 
'Service', 
'Sports', 
'Technology', 
'Telecommunications', 
'Transportation', 
'Utilities', 
'Video Game', 
'Web Services'], prompt: '1. What industry are you in?' %>
</div>
</div>
<div class="row">
<div class="col m12 input-field">
    <%= f.input_field :skills, rows: 5 , class: 'materialize-textarea' %>
    <label for="survey_form_skills">2. How has learning coding skills has impacted your work or career.</label>

  </div>
</div>
<div class="row">
  <div class="col m12 input-field">
    <%= f.input_field :company, collection: ['Yes', 'No'], prompt: 'Yes / No' %>
    <label for="survey_form_company">3. Would your company benefit from more employees learning basic coding skills or becoming more familiar with technology?</label>
  </div>
</div>
<div class='row'>
  <div class="col m12 input-field">
    <label for="survey_form_comments">4. Anythinge else you want to say?</label>
    <%= f.input_field :comments, rows: 5 , class: 'materialize-textarea' %>
  </div>
</div>
<div class="row">
  <div class="col m12">
    <button type="submit" class="btn light-blue">Finish survey</button>
  </div>
</div>
<% end %>
